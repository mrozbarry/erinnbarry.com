.highlights
  position: relative
  list-style: none
  display: flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  padding: 0

  &::before
    display: block
    position: absolute
    left: 50%
    top: 0
    bottom: 0
    width: 1px
    content: " "
    border-left: 1px black solid
    z-index: 1

.highlight
  padding: 8px
  border: 1px black solid
  background-color: white
  z-index: 2
  width: 300px
  overflow: hidden
  margin: 32px 0

  &--left
    margin-left: -360px
    @media print
        margin-left: 0

  &--right
    margin-left: 360px
    @media print
        margin-left: 0
  

  &-section
    padding: 8px
    border: 1px black solid
    background-color: white
    z-index: 2
