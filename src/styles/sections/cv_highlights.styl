.highlights
  width: 100%
  position: relative
  list-style: none
  display: flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  padding: 0

  &::before
    display: block
    position: absolute
    left: 50%
    top: 0
    bottom: 0
    width: 1px
    content: " "
    border-left: 1px gradient-primary solid
    z-index: 1

    @media screen and (max-width: mobile-breakpoint)
      display: none

.highlight
  z-index: 2
  width: calc(50% + 32px)
  margin: 32px 0

  &--left
    align-self: flex-start
    text-align: right

    .highlight-icon
      order: 2

    .highlight-content
      order: 1

  &--right
    align-self: flex-end
    text-align: left

  @media screen and (max-width: mobile-breakpoint)
    align-self: flex-start
    margin-left: 64px
    width: calc(100% - 64px)
    text-align: left

  &-wrapper
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    align-items: flex-start
    justify-content: flex-start

  &-icon
    width: 64px
    flex-shrink: 0
    flex-grow: 0

    span.fa
      color: white
      background-color: gradient-secondary
      font-size: 24px
      border-radius: 50%
      width: 64px
      height: 64px
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
      text-align: center

  &-content
    flex-grow: 1
    background-color: white
    padding: 0 8px
  
  &-title
    font-family: "Space Mono", Arial, serif
    font-size: 24px
    font-weight: 400
    line-height: 1.1

  &-dates
    font-family: "Space Mono", Arial, serif
    font-size: 24px
    font-weight: 400
    line-height: 1.1
    margin-bottom: 20px

  &-subtitle
    font-family: "Space Mono", Arial, serif
    font-size: 16px
    line-height: 1.7
    color: #BFBFBF
    margin-bottom: 20px

  &-description
    font-family: "Space Mono", Arial, serif
    font-size: 16px
    line-height: 1.7
    color: #4D4D4D

  &-section
    font-family: "Space Mono", Arial, serif
    font-size: 18px
    font-weight: bold
    letter-spacing: 5px
    text-transform: uppercase
    padding: 8px 16px
    background-color: #E6E6E6
    border-radius: 4px
    z-index: 2

    @media screen and (max-width: mobile-breakpoint)
      align-self: flex-start
      margin: 0 8px
      text-align: center
      width: auto
