.highlights
  width: 100%
  position: relative
  list-style: none
  display: flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  padding: 0

  &::before
    display: block
    position: absolute
    left: 50%
    top: 0
    bottom: 0
    width: 1px
    content: " "
    border-left: 1px black solid
    z-index: 1

    @media screen and (max-width: mobile-breakpoint)
      display: none

.highlight
  padding: 8px
  background-color: white
  z-index: 2
  width: 40%
  overflow: hidden
  margin: 32px 0

  &--left
    align-self: flex-start
    text-align: right

  &--right
    align-self: flex-end
    text-align: left

  @media screen and (max-width: mobile-breakpoint)
    align-self: flex-start
    margin-left: 64px
    width: calc(100% - 64px)
    text-align: left
  
  &-title
    font-family: "Space Mono", Arial, serif
    font-size: 24px
    font-weight: 400
    line-height: 1.1


  &-section
    font-family: "Space Mono", Arial, serif
    font-size: 18px
    font-weight: bold
    letter-spacing: 5px
    text-transform: uppercase
    padding: 8px 16px
    background-color: #E6E6E6
    border-radius: 4px
    z-index: 2

    @media screen and (max-width: mobile-breakpoint)
      align-self: flex-start
      margin: 0 8px
      text-align: center
      width: auto
