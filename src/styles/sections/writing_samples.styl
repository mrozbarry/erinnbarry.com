.section-writing-samples
  background-color: gradient-primary
  padding: 64px
  margin-top: 128px

  .samples
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: center
    justify-content: center
    width: 100%
    margin-bottom: 64px

    &-title
      color: white
      text-align: center
      font-size: 40px
      line-height: 1.5
      font-weight: 400
      margin-bottom: 64px

  .sample
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    width: 225px
    height: 250px
    margin: 16px
    padding: 16px
    text-align: center
    border: 1px black solid
    background-color: white
    text-decoration: none
    color: black
    transition: all .3s ease-in-out

    &-title
      font-size: 20px

    &-subtitle
      font-size: 14px
      color: #999
      margin-top: 32px

    &:hover
      box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.2)
      margin-left: 12px
      margin-top: 12px
      margin-right: 20px
      margin-bottom: 20px
