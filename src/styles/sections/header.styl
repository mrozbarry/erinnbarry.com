.section-header
  min-height: 100%
  background-color: purple
  color: white

  /* HEY YOU! Put the gradient here (remove the semi-colons, what are we? animals?): */
  /* Also, this is where I nabbed this gradient: https://uigradients.com/ */

  background: #000428
  background: -webkit-linear-gradient(to right, #000428, #004e92)
  background: linear-gradient(to right, #000428, #004e92)

  /* That's enough gradient */

  .profile-image
    width: 300px
    height: 300px
    border-radius: 50%
    margin: 32px auto
    background-size: cover

  .title
    text-align: center
    font-family: 'Kaushan Script', cursive
    font-size: 50px
    transform: rotate(-5deg)
    margin: 32px 0

    &::before,
    &::after
      content: " - "

  .sub-title
    text-align: center
    font-size: 16px
  
  .details
    text-align: center
    margin: 16px 0
    font-size: 16px
