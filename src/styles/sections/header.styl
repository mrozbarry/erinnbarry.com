.section-header
  height: 100%
  background-color: purple
  color: white
  overflow: hidden
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

  /* HEY YOU! Put the gradient here (remove the semi-colons, what are we? animals?): */
  /* Also, this is where I nabbed this gradient: https://uigradients.com/ */


  // background: #AA076B;  /* fallback for old browsers */
  // background: -webkit-linear-gradient(to right, #61045F, #AA076B);  /* Chrome 10-25, Safari 5.1-6 */
  // background: linear-gradient(to right, #61045F, #AA076B); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

  background: gradient-primary
  background: -webkit-linear-gradient(to right, gradient-secondary, gradient-primary)
  background: linear-gradient(to right, gradient-secondary, gradient-primary)


  /* That's enough gradient */

  .profile-image
    width: 280px
    height: 280px
    border-radius: 50%
    margin-bottom: 32px
    background-size: cover

  .title
    text-align: center
    font-family: 'Kaushan Script', cursive
    font-size: 64px
    transform: rotate(-5deg)
    margin: 32px 0

    &::before,
    &::after
      content: " - "

  .sub-title
    text-align: center
    font-size: 20px

  .details
    text-align: center
    margin: 16px 0
    font-size: 16px

  .social
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    font-size: 32px
    margin-top: 64px

    a
      color: white
      text-decoration: none
      margin: 0 8px
